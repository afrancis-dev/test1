include = "lighttpd.options.conf"

erb server.errorlog = <%= ENV['OPENSHIFT_LIGHTTPD_LOG_DIR'] %>error.log
erb accesslog.filename = <%= ENV['OPENSHIFT_LIGHTTPD_LOG_DIR'] %>access.log
erb server.pid-file  = <%= ENV['OPENSHIFT_LIGHTTPD_DIR'] %>pid/lighttpd.pid

erb compress.cache-dir = "<%= ENV['OPENSHIFT_LIGHTTPD_DIR'] %>tmp/"
 
erb include = "<%= ENV['OPENSHIFT_REPO_DIR'] %>lighttpd.conf"